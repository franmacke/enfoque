{
  "manifest_version": 2,
  "name": "Enfoque",
  "version": "1.0.1",

  "description": "Con Enfoque, podes seleccionar sitios web que te distraigan para poder deshabilitarlos y no distraerte mientras este activo.",

  "icons": {
    "512": "icons/focus.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content_script/enfoque.js"]
    }
  ],
  "background": {
    "scripts": ["background/background.js", "binaries/build/main.js"],
    "persistent": false
  },

  "browser_action": {
    "default_title": "Enfoque",
    "default_popup": "binaries/build/index.html"
  },

  "permissions": ["tabs", "storage"]
}
